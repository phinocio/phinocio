{
    "prettier.documentSelectors": [
        "**/*.blade.php"
    ],
    "useTabs": true,
    "semi": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 120,
    "plugins": [
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": "*.blade.php",
            "options": {
                "parser": "html"
            }
        }
    ]
}
